<body>
    <div class="container">
        <div id="loginForm">
            <h2>تقرير المبيعات</h2>
            <input type="email" id="email" placeholder="أدخل البريد الإلكتروني" dir="ltr">
            <button onclick="checkAccess()">دخول</button>
            <p id="errorMessage" class="error">عذراً، ليس لديك صلاحية الوصول</p>
        </div>
    </div>

    <div id="reportContainer" class="hidden">
        <iframe 
            title="تقرير المبيعات"
            width="100%" 
            height="100%" 
            src="https://app.powerbi.com/view?r=eyJrIjoiYzAxMThhMzMtN2MzYy00ZjczLTk0MzItNzExZWNiZTQwZWE4IiwidCI6IjRmMjA1MmNkLTRmZjktNDc4ZC05ZTE4LWRlNTYzMWVkZWJmNiIsImMiOjl9"
            frameborder="0" 
            allowFullScreen="true">
        </iframe>
    </div>

    <script>
        // قائمة البريد الإلكتروني المسموح لها
        const allowedEmails = [
            'email1@company.com',
            'email2@company.com',
            'email3@company.com'
        ];

        function checkAccess() {
            const email = document.getElementById('email').value.toLowerCase();
            const errorMessage = document.getElementById('errorMessage');
            
            if (allowedEmails.includes(email)) {
                document.querySelector('.container').style.display = 'none';
                document.getElementById('reportContainer').classList.remove('hidden');
                // حفظ حالة تسجيل الدخول
                localStorage.setItem('reportAccess', email);
            } else {
                errorMessage.style.display = 'block';
                setTimeout(() => {
                    errorMessage.style.display = 'none';
                }, 3000);
            }
        }

        // التحقق من وجود جلسة سابقة
        window.onload = function() {
            const savedAccess = localStorage.getItem('reportAccess');
            if (savedAccess && allowedEmails.includes(savedAccess)) {
                document.querySelector('.container').style.display = 'none';
                document.getElementById('reportContainer').classList.remove('hidden');
            }
        }
    </script>
</body>
