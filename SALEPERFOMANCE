        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }
        #loginForm {
            text-align: center;
        }
        input {
            width: 100%;
            padding: 10px;
